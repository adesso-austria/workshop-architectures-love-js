{
  "name": "workshop-js-loves-architectures",
  "version": "1.0.0",
  "description": "",
  "workspaces": [
    "./frontend",
    "./backend",
    "./contracts",
    "./utils",
    "./test-utils"
  ],
  "scripts": {
    "clean": "tsc -b --clean && npm run -ws --if-present clean",
    "prebuild": "npm run gen:contracts",
    "build": "tsc -b",
    "build:watch": "tsc -b --watch --preserveWatchOutput",
    "gen:contracts": "npm run -w contracts gen:contracts",
    "gen:contracts:watch": "npm run -w contracts gen:contracts:watch",
    "prepare": "husky install",
    "lint": "eslint .",
    "lint:file-casing": "node scripts/check-file-casing.js",
    "prestart": "(npm run build || exit 0) && npm run -w backend up",
    "start": "concurrently -k --raw npm:build:watch 'npm run backend --ignore-scripts' npm:frontend npm:gen:contracts:watch 'npm run --ignore-scripts test:watch'",
    "poststart": "npm run -w backend down",
    "pretest": "npm run -w backend up",
    "test": "jest",
    "posttest": "npm run -w backend down",
    "test:coverage": "npm test -- --coverage",
    "test:watch": "CI=true npm test -- --watch --coverage --colors",
    "backend": "npm -w backend start",
    "frontend": "npm -w frontend start"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/ramda": "^0.28.15",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "concurrently": "^7.4.0",
    "dotenv": "^16.0.2",
    "esbuild": "^0.15.7",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "jest": "^29.0.2",
    "jest-environment-jsdom": "^29.0.2",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "openapi-typescript": "^5.4.1",
    "typescript": "^4.8.2",
    "yargs": "^17.5.1"
  },
  "type": "module",
  "dependencies": {
    "fp-ts": "^2.12.3",
    "ramda": "^0.28.0",
    "rxjs": "^7.5.6",
    "ts-pattern": "^4.0.5"
  }
}
