{
  "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/eslintrc.json",
  "rules": {
    "import/no-internal-modules": [
      "error",
      {
        "allow": ["fp-ts/lib/function", "date-fns/fp", "react-icons/*"]
      }
    ],
    "import/no-restricted-paths": [
      "error",
      {
        "zones": [
          {
            "target": "src/application/**/*",
            "from": "../node_modules/contracts",
            "message": "application must not use contracts directly, use boundary instead"
          },
          {
            "target": "src/repository/**/*",
            "from": "src/application/**/*",
            "message": "repository is driving application, not other way around"
          },
          {
            "target": "src/repository/**/*",
            "from": "src/boundary/**/*",
            "message": "repository must not get in contact with outside world"
          },
          {
            "target": "src/repository/**/*",
            "from": "../node_modules/contracts",
            "message": "repository should never use contracts, only domain"
          },
          {
            "target": "src/boundary/**/*",
            "from": "src/repository/**/*",
            "message": "boundary should never get in contact with persistence layer"
          },
          {
            "target": "src/boundary/**/*",
            "from": "src/application/**/*",
            "message": "boundary is supposed to guard application, not other way around"
          },
          {
            "target": "src/domain/**/*",
            "from": "../node_modules/contracts",
            "message": "domain layer must be pure"
          },
          {
            "target": "src/domain/**/*",
            "from": "src/application/**/*",
            "message": "domain layer must be pure"
          },
          {
            "target": "src/domain/**/*",
            "from": "src/boundary/**/*",
            "message": "domain layer must be pure"
          },
          {
            "target": "src/domain/**/*",
            "from": "src/repository/**/*",
            "message": "domain layer must be pure"
          }
        ]
      }
    ]
  }
}
